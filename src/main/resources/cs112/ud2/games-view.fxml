<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs112.ud2.controllers.GamesController">
   <bottom>
      <HBox prefHeight="350.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label fx:id="gamesSlotsLabel" text="Slots">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="-30.0" />
                     </VBox.margin>
                  </Label>
                  <ImageView fx:id="gamesSlotsImageView" fitHeight="200.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" />
                  <Button fx:id="gamesSlotsPlayButton" mnemonicParsing="false" onAction="#onGamesSlotsPlayButtonClick" text="Play">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label fx:id="gamesRpsLabel" text="Rock Paper Scissors">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="-30.0" />
                     </VBox.margin>
                  </Label>
                  <ImageView fx:id="gamesRpsImageView" fitHeight="200.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" />
                  <Button fx:id="gamesRpsPlayButton" mnemonicParsing="false" onAction="#onGamesRpsPlayButtonClick" text="Play">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label fx:id="gamesBlackjackLabel" text="Blackjack">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="-30.0" />
                     </VBox.margin>
                  </Label>
                  <ImageView fx:id="gamesBlackjackImageView" fitHeight="200.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" />
                  <Button fx:id="gamesBlackjackPlayButton" mnemonicParsing="false" onAction="#onGamesBlackjackPlayButtonClick" text="Play">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
   <right>
      <Label fx:id="gamesMoneyLabel" prefHeight="50.0" prefWidth="125.0" text="Money" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
         <padding>
            <Insets right="40.0" />
         </padding>
      </Label>
   </right>
</BorderPane>
